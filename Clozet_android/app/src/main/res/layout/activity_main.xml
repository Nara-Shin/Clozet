<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55.33dp"
        android:id="@+id/relativeLayout_main_topbar"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30.67dp"
            android:layout_height="30.67dp"
            android:id="@+id/imageView_main_sidebar"
            android:layout_marginLeft="18.67dp"
            android:layout_alignParentEnd="false"
            android:src="@drawable/menu_btn"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="147.33dp"
            android:layout_height="30.67dp"
            android:id="@+id/imageView2"
            android:src="@drawable/logo_clozet"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <com.loopj.android.image.SmartImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout_bottom"
        android:layout_below="@+id/relativeLayout_main_topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout_bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_main_change"
                android:src="@drawable/change_btn_unclick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_main_savepic"
                android:src="@drawable/csave_btn_unclick" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout_sideBar_close"
        android:layout_toRightOf="@+id/frameLayout_sideBar_container"
        android:background="#bf000000"
        android:visibility="gone"
        android:clickable="true"></FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout_sideBar_container"
        android:visibility="gone"
        android:clickable="true"></FrameLayout>


</RelativeLayout>
