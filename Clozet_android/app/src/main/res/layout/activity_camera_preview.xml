<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.krcho.clozet.camera.CameraPreviewActivity">

    <ImageView
        android:id="@+id/camera_preview_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="97dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title_preview"
        />

    <RelativeLayout
        android:layout_width="267dp"
        android:layout_height="430dp"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/camera_preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <Button
            android:id="@+id/btn_image_barcode"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:background="@drawable/background_preview_image_barcode"
            />

        <Button
            android:id="@+id/btn_image_barcode2"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@drawable/background_preview_image_barcode2"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_barcode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_preview_barcode"
        />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="39dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_guide_cancel"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_preview_save"
        />

</RelativeLayout>
