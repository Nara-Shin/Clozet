<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140.67dp">

        <FrameLayout
            android:layout_width="140.67dp"
            android:layout_height="140.67dp">

            <ImageView
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:id="@+id/imageView_view_call_list_cloth"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloth Name"
                android:id="@+id/textView_view_call_list_name"
                android:textSize="9.33dp"
                android:textColor="#536d79"
                android:layout_marginBottom="9.33dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloth Code"
                android:id="@+id/textView_view_call_list_code"
                android:textSize="14dp"
                android:textColor="#002496"
                android:layout_marginBottom="7.33dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloth Price"
                android:id="@+id/textView_view_call_list_price"
                android:textColor="#000000"
                android:layout_marginBottom="9.33dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="165.33dp"
                android:layout_height="36dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="21.33dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="size"
                        android:id="@+id/textView_view_call_list_size"
                        android:layout_weight="1"
                        android:textSize="13.33dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#002496"
                        android:layout_gravity="center" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <FrameLayout
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:background="#ff000000"
                            android:id="@+id/frameLayout_view_call_list_color"></FrameLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="72dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView_view_call_list_etc"
                        android:layout_weight="1"
                        android:src="@drawable/main_cancel_btn"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="NUM"
                        android:id="@+id/textView_view_call_list_amount"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="13.33dp"
                        android:textColor="#002496" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>